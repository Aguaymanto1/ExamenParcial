@model IEnumerable<ExamenParcial.Models.Curso>

<h2>Panel de Coordinador</h2>
<a asp-action="Crear" class="btn btn-primary">Nuevo Curso</a>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Codigo</td>
                <td>@c.Nombre</td>
                <td>@c.Activo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@c.Id">Editar</a> |
                    <a asp-action="Desactivar" asp-route-id="@c.Id">Desactivar</a> |
                    <a asp-action="Matriculas" asp-route-id="@c.Id">Ver Matrículas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
