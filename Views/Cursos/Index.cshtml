@model IEnumerable<ExamenParcial.Models.Curso>

<h2>Catálogo de Cursos</h2>

<form method="get" class="mb-3">
    <input type="text" name="nombre" placeholder="Nombre" />
    <input type="number" name="minCreditos" placeholder="Mín Créditos" min="0" />
    <input type="number" name="maxCreditos" placeholder="Máx Créditos" min="0" />
    <input type="time" name="inicio" />
    <input type="time" name="fin" />
    <button type="submit">Filtrar</button>
</form>

<table class="table table-striped">
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Créditos</th>
        <th>Horario</th>
        <th></th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Codigo</td>
            <td>@c.Nombre</td>
            <td>@c.Creditos</td>
            <td>@c.HorarioInicio - @c.HorarioFin</td>
            <td>
                <a asp-action="Detalle" asp-route-id="@c.Id" class="btn btn-info">Ver</a>
            </td>
        </tr>
    }
</table>
